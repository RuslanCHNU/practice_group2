<style>
.prokrutka {
height: 300px; /* высота нашего блока */
width: 500px; /* ширина нашего блока */
background: #fff; /* цвет фона, белый */
border: 1px solid #C1C1C1; /* размер и цвет границы блока */
overflow-x: scroll; /* прокрутка по горизонтали */
overflow-y: scroll; /* прокрутка по вертикали */
}
</style>

<center>
<div class="cent">
<h1>Welcome <%= @user.username %></h1>

<h2>Сьогодні | <%= Time.new.strftime("%d.%m.%Y") %></h2>


<div class="prokrutka">
<% @spend.each do |hm| %>
    <h3><%= hm.spended %> | <%= hm.cost %></h3>
<% end %>
</div>

<h2><%= Time.new.strftime("%d.%m.%Y") %></h2>

<div class="prokrutka">
<% Spend.where("User_id = '1'").each do |hm| %>
    <h3><%= hm.spended %> | <%= hm.cost %> | <%= hm.date_spend.strftime("%d.%m.%Y")  %></h3>
<% end %>
</div>

<%= form_for :post, url: pages_path do |f| %>
    <%= f.text_field :spended, required:true, placeholder: "Витрати або прибуток" %>
    <%= f.text_field :cost, required:true, placeholder: "Сума" %>
    <%= f.date_field :date_spend, required:true, placeholder: "Дата" %>
    <%= f.submit "Submit" %>
<% end %>

</div>
</center>