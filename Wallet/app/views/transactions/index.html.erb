<h1>Wallet</h1>

<div style="display: flex;">
  <div style="flex: 1;">
    <h2>Transactions List</h2>
    <ul>
      <% @transactions.each do |transaction| %>
        <li>
          <%= "#{transaction.name}: #{transaction.amount} on #{transaction.date}" %>
          <%= button_to 'Delete', transaction_path(transaction), method: :delete, data: { confirm: 'Are you sure you want to delete this transaction?' } %>
        </li>
      <% end %>
    </ul>
  </div>

  <div style="flex: 1;">
    <h2>Add Transaction</h2>
    <%= form_with(model: @new_transaction, url: transactions_path) do |form| %>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :amount %>
        <%= form.text_field :amount, type: 'number' %>
      </div>

      <div>
        <%= form.label :date %>
        <%= form.date_field :date %>
      </div>

      <div>
        <%= form.submit 'Add Transaction' %>
      </div>
    <% end %>
  </div>
</div>
